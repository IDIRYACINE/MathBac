<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <androidx.fragment.app.FragmentContainerView
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="608dp" app:navGraph="@navigation/exo_nav" app:defaultNavHost="true"
            android:id="@+id/exo_host" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="67dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="0dp" android:layout_alignParentTop="true"
            android:layout_above="@+id/exo_controls" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="0dp" android:layout_marginEnd="0dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true">
    </androidx.fragment.app.FragmentContainerView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/exo_menu" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/exo_controls" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            app:itemIconSize="30dp" android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
            app:labelVisibilityMode="unlabeled">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
    <TextView
            android:text=":"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textColor="@color/colorPrimary"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@+id/exo_controls"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/exo_host"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_above="@+id/exo_controls" android:layout_marginBottom="-1dp"
            android:layout_toStartOf="@+id/seconds" android:layout_marginRight="14dp" android:layout_marginEnd="14dp"
            android:layout_toLeftOf="@+id/seconds" android:layout_toEndOf="@+id/mins"
            android:layout_toRightOf="@+id/mins" android:layout_marginLeft="13dp" android:layout_marginStart="13dp"/>
    <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/mins"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            app:np_width="70dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/colorPrimary"
            app:np_formatter="@string/number_picker_formatter"
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_selectedTextSize="@dimen/selected_text_size"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="@dimen/text_size"
            app:np_typeface="@string/roboto_light"
            app:np_value="3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" android:layout_alignParentStart="true" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"/>
    <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/seconds"
            android:layout_width="@dimen/exoCounter_width"
            android:layout_height="wrap_content"
            app:np_width="70dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/colorPrimary"
            app:np_formatter="@string/number_picker_formatter"
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_selectedTextSize="@dimen/selected_text_size"
            app:np_textColor="@color/colorPrimary"
            app:np_textSize="@dimen/text_size"
            app:np_typeface="@string/roboto_light"
            app:np_value="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView" android:fadingEdge="none"
            app:np_scrollerEnabled="false" android:layout_alignParentEnd="true" android:layout_alignParentRight="false"
            android:layout_marginRight="0dp" android:layout_marginEnd="2dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"/>


</RelativeLayout>